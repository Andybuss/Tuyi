<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="#eeffffff"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/tuyi_tag"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle_orange"
                android:gravity="center"
                android:textColor="@color/md_white_1000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/item_like_tuyi_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/circle_rect_no_solid_bg"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:textColor="@color/md_deep_orange_900"
                android:textSize="@dimen/text_size_18"
                android:typeface="serif" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_like_locDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_like_addr"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="5dp"
            android:textSize="@dimen/text_size_18" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/item_like_tuyi_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:background="@drawable/chat_edit_normal"
                android:minHeight="200dp"
                android:minWidth="200dp"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic3" />


            <TextView
                android:id="@+id/item_like_tuyi_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_like_tuyi_pic"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/md_grey_300" />
    </LinearLayout>
</android.support.v7.widget.CardView>